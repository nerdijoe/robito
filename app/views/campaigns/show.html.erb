<div class="bg_img">
<div class="container">
  <div class="row">
    <div class="col-md-12">
        <% if current_user.brand.present? %>
        <% end %>
      </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="camp-thumbnail">
        <div class="campaign">
          <% @campaign.image.each do |photo| %>
            <%= image_tag photo.url(:thumb) %>
          <% end %>
        </div>
      </div>
    </div>
      <div class="col-md-6">
        <div class="about_product-container">
          <div class="about-caption">
            <div class="about-textbox">
              <p> <i class="fa fa-info" aria-hidden="true"></i> Product name : <%=  @campaign.product_name %></p>
              <hr class="hrrr">
              <p> <i class="fa fa-tag" aria-hidden="true"></i> Product Category : <%=  @campaign.product_category %></p>
              <hr class="hrrr">
              <p> <i class="fa fa-compass" aria-hidden="true"></i> Location : <%=  @campaign.location %></p>
              <hr class="hrrr">
              <p> <i class="fa fa-user-circle-o" aria-hidden="true"></i> Target Age : <%=  @campaign.age %></p>
              <hr class="hrrr">
              <p> <i class="fa fa-venus-mars" aria-hidden="true"></i>  Target Gender : <%=  @campaign.gender %></p>
              <hr class="hrrr">
              <p> <i class="fa fa-bookmark-o" aria-hidden="true"></i> Interests : <%=  @campaign.interests %></p>
              <hr class="hrrr">
                <p> <i class="fa fa-comment-o" aria-hidden="true"></i> Description : <%=  @campaign.description %></p>
          </div>
          <div class="btn-group_pull-left">
            <%= link_to 'Edit', edit_brand_campaign_path(brand_id: current_user.brand.id, id: @campaign.id), class: "btn-text" %>
          </div>
          <div class="btn-group_pull-left">
            <%= link_to "Delete", brand_campaign_path(brand_id: current_user.brand.id), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-text" %>
          </div>
        </div>
          <%= link_to 'Create Reward', new_campaign_reward_path(@campaign.id), class: "btn-info" %>
        </div>
      </div>
    </div>
  </div>

  <hr class="hrrrr">



    <div class="row">
    <div class="reward-head">
      <h1><i class="fa fa-gift" aria-hidden="true"></i></h1>
    </div>
  </div>
    <div class="row">
      <div class="reward-container">
        <div class="col-md-6">
          <div class="right-reward">
          <% @rewards.each do |t| %>
          <i class="fa fa-bullseye" aria-hidden="true"></i> Target : <%= t.target %></br>
            <hr class="hrr">
            <i class="fa fa-check-square-o" aria-hidden="true"></i> Prize         : <%= t.prize %></br>
            <hr class="hrr">
            <i class="fa fa-comment-o" aria-hidden="true"></i> Description   : <%= t.description %></br>
            <%end%>
          </div>
        </div>
            <div class="col-md-6">
              <div class="left-reward">
              <% @rewards.each do |t| %>
              <i class="fa fa-calendar" aria-hidden="true"></i> Post Date     : <%= t.post_date %></br>
              <hr class="hrr">
              <i class="fa fa-calendar" aria-hidden="true"></i> Dead Line Date: <%= t.deadline %></br>
              <%end%>
          </div>
        </div>
      </div>
    </div>

    <hr class="hrrrr">

    <div class="row">
      <div class="desire-text">
        <h2><i class="fa fa-users" aria-hidden="true"></i></h2>
      </div>
    </div>
