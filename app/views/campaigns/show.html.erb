<h2>brand#show</h2>

  <p><%= @campaign.id %></p>
  <p>Image: </p>
  <div class="campaign">
    <% @campaign.image.each do |photo| %>
       <%= image_tag photo.url(:thumb) %>
    <% end %>
  </div>

  <p>Product name: <%=  @campaign.product_name %></p>
  <p>Description: <%=  @campaign.description %></p>
  <p>Product Category<%=  @campaign.product_category %></p>
  <% if current_user.brand.present? %>
    <p> <%= link_to 'Edit', edit_brand_campaign_path(brand_id: current_user.brand.id, id: @campaign.id) %> </p>
  <% end %>
  <p>-------</p>

  <% if current_user.influencer.present? %>
  Button to accept

  <%= form_for [current_user.influencer, @campaign.requests.find_by(influencer_id: current_user.influencer.id)], html: {class: 'form-horizontal'} do |form| %>

  <div class="field">
    <%= form.label :status, "Do you want to do this campaign? " %><br />
    <%= form.select :status, [ 'Yes','No' ], :prompt => 'Select One' %>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit 'Submit' %>
    </div>
  </div>
  <% end %>

  <% end %>

<% if current_user.brand.present? %>

<h2>Influencers</h2>

<% @influencers.each do |i| %>
  <p><%= i.user.role %></p>

  <% if i.user.identities.present? %>
    <% insta = i.user.identities.first %>
      <p><%= image_tag insta.image %></p>

      <p><%= insta.name %></p>
      <p><%= insta.nickname %></p>
  <% end %>

  <p>Influencer id: <%= i.id %>  </p>
  <p>User id:<%= i.user.id %></p>
  <p><%= link_to i.user.email, influencer_path(i) %></p>
  <% if @campaign.requests.where(influencer_id: i.id).present? %>
    <%= link_to "Delete", campaign_request_path(campaign_id: @campaign, influencer_id: i.id), method: :delete  %>
  <% else %>
    <%= link_to "Pick Me", campaign_requests_path(campaign_id: @campaign, influencer_id: i.id), method: :post  %>
  <% end %>
  <p> ---------------</p>

<% end %>

<% end %>
