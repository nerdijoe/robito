<div class="col-xs-12">
  <div class="influencer-container">
  <div class="carousel slide" id="myCarousel">
        <div class="carousel-inner">
            <div class="item active">
                    <ul class="thumbnails">
                      <% @influencers.each do |i| %>
                      <% if i.user.identities.present? %>
                        <li class="col-sm-3">
                						<div class="fff">

                  								<div class="thumbnail">
                                    <% insta = i.user.identities.first %>
                  									<a href="#"><%= image_tag insta.image %></a>
                  								</div>
              								<div class="caption">
                                <div class="insta-name">
              									<h4><%= insta.nickname %></h4>
                              </div>
                                <%= link_to "View Profile", influencer_path(i), class: "insta-btn" %>
                                <% if @campaign.requests.where(influencer_id: i.id).present? %>
                                  <%= link_to "Cancel Request", campaign_request_path(campaign_id: @campaign, influencer_id: i.id), method: :delete, class: "insta-btn" %>
                                <% else %>
                                  <%= link_to "Pick Me", campaign_requests_path(campaign_id: @campaign, influencer_id: i.id), method: :post, class: "insta-btn"  %>
                                <% end %>

              								</div>
                            </div>
                        </li>
                        <%end%>
                        <%end%>
                      </ul>
                  </div>
              </div>
            </div>
            <nav>
              <ul class="control-box pager">
                <li><a data-slide="prev" href="#myCarousel" class=""><i class="glyphicon glyphicon-chevron-left"></i></a></li>
                <li><a data-slide="next" href="#myCarousel" class=""><i class="glyphicon glyphicon-chevron-right"></i></li>
                </ul>
              </nav>
        </div>
        <div class="search-box">
        <p> <i class="fa fa-search" aria-hidden="true"></i> <%= link_to "Search For More Influencers", new_search_path %> </p>
      </div>





	   <!-- /.control-box -->

    </div><!-- /#myCarousel -->

</div><!-- /.col-xs-12 -->

</div>

