
<div class="col-md-8 col-md-offset-2">
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3>Do you want to do this campaign?</h3>
      </div>
      <div class="panel-body">

          <%= form_for [current_user.influencer, @campaign.requests.find_by(influencer_id: current_user.influencer.id)], html: {class: 'form-horizontal'} do |form| %>
            <div class="form-group">
              <div class="col-sm-12 text-center">
                <%= form.select :status, [ 'Yes','No' ], :prompt => 'Select One', class: 'form-control'%>
              </div>
            </div>

            <div class="form-group">
              <div class="col-sm-12 text-center">
                <%= form.submit 'Submit', class: "btn btn-primary"%>
              </div>
            </div>

          <% end %>

       </div>
     </div>
   </div>
 </div>
