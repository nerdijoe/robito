
<h2>Influencers#index</h2>
<p> <%= link_to "My Profile", influencer_path(current_user.influencer) %> </p>



<h2>All Campaigns:</h2>

<% @campaigns.each_with_index do |c| %>

    <% c.image.each do |photo| %>
      <div class="campaign">
         <%= image_tag photo.url(:thumb) %>
      </div>
    <% end %>
  <p>Product name: <%= c.product_name %></p>
  <p>Description: <%= c.description %></p>
  <p>Product Category<%= c.product_category %></p>
  <p> <%= link_to 'See Details', influencer_campaign_path(influencer_id: current_user.influencer.id, id: c.id) %> </p>
  <p>-------</p>
<% end %>

<h2>Pending Campaigns:</h2>

<% @requests = @pending_requests %>
<%= render partial: '/shared/influencer_index_show_campaign', object: @requests %>

<h2>Ongoing Campaigns:</h2>

<% @requests = @ongoing_requests %>
<%= render partial: '/shared/influencer_index_show_campaign', object: @requests %>
