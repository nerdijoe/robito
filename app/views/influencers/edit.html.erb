<div class="col-md-8 col-md-offset-2">
	<div class="row">
		<div class="panel panel-default">
		  <div class="panel-heading">
		    <h2>Influencer Profile Edit</h2>
		  </div>

			  <%= link_to "Destroy an account", influencer_path(@influencer.id), method: :delete, data: { confirm: 'Are you SURE!!Everything will be gone?'}%>
			 
			  <%= form_for @influencer, html: {class: 'form-horizontal'} do |form| %>

			    <%= render partial: '/influencers/form', object: form %>

			    <div class="form-group">
			      <div class="col-sm-offset-2 col-sm-10">
			        <%= form.submit 'Save Changes' %>
			      </div>
			    </div>

			  <% end %>

		</div>
	</div>
</div>