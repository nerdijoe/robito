
<h2>Brand Index</h2>

<p> <%= link_to "Create a Campaign", new_brand_campaign_path(current_user.brand) %> </p>
<p> <%= link_to "My Profile", brand_path(current_user.brand) %> </p>


<h4>Your Campaigns <span class="badge"><%= @campaigns.count %></span></h4>
<% @campaigns.each_with_index do |c| %>

  <% @campaign = c %>
  <%= render partial: '/shared/brand_index_show_campaigns', object: @campaign %>

  <% @requests = c.requests.pending %>
  <h4>Pending <span class="badge"><%= @requests.count %></span></h4>
  <%= render partial: '/shared/brand_index_show_influencers', object: @requests %>

  <% @requests = c.requests.ongoing %>
  <h4>Ongoing <span class="badge"><%= @requests.count %></span></h4>
  <%= render partial: '/shared/brand_index_show_influencers', object: @requests %>

<% end %>
