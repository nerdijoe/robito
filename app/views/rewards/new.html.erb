<h3>Hello this is The New Rewards Page </h3>

<%= form_for [@campaign, @reward], html: {class: 'form-horizontal'} do |u| %>


  <div class="form-group">

 <div class="form-control">
	<%= u.label :target %>
	<%= u.text_field :target %>
</div>

<div class="form-control">
	<%= u.label :prize %>
	<%= u.text_field :prize %>
 </div>

<div class="form-group">    
<%= u.label :post_date, 'Post date', class:'col-sm-2 control-label' %>    
<div class="col-sm-3">      
<%= u.date_select :post_date , class: 'form-control'%>    
</div>  
</div>

  <div class="form-group">    
  <%= u.label :deadline, 'Dead Line', class:'col-sm-2 control-label' %>    
  <div class="col-sm-3">      
  <%= u.date_select :deadline , class: 'form-control'%>    
  </div>  
  </div>

<div class="form-control">
	<%= u.label :description %>
	<%= u.text_field :description %>
</div>

<div>
<%= u.submit %>
</div>
</div>
<% end %>
 
